<project default =  "compile" name = "ACG-SecureCam">
	<property name="SERVER" location="./bin/Server" />
	<property name="CLIENT" location="./bin/Client" />
	<target name = "compile">
		<javac srcdir = "${CLIENT}" destdir = "${CLIENT}" classpath="${CLIENT}/lib/*;."/>
		<javac srcdir = "${SERVER}" destdir = "${SERVER}" classpath="${SERVER}/lib/*;."/>
	</target>
</project>